<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyle8">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="lineHeight">24sp</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="TextLabelsStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_38</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="ButtonTextStyle">
        <item name="font">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="ToolbarTextStyle">
        <item name="android:textSize">21sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/officinasansextraboldscc</item>
    </style>

    <style name="DialogTextStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="TextStyle5">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="CategoryTextAppearance">
        <item name="android:fontFamily">@font/officinasansextraboldscc</item>
        <item name="android:textColor">@color/light_olive_green</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="@android:style/TextAppearance.Material.Widget.TabWidget">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textStyle13">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_54</item>
    </style>

    <style name="TextStyle3">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black_70</item>
    </style>

</resources>